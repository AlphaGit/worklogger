{
    "log4js": {
        "appenders": {
            "outAppender": {
                "type": "stdout",
                "layout": {
                    "type": "pattern",
                    "pattern": "%[[%d{ABSOLUTE}] [%-5p]%] %m"
                }
            }
        },
        "categories": {
            "default": {
                "appenders": ["outAppender"],
                "level": "trace"
            }
        }
    },
    "options": {
        "minimumLoggableTimeSlotInMinutes": 30,
        "timePeriod": {
            "begin": {
                "fromNow": "last",
                "unit": "hour"
            },
            "end": {
                "fromNow": "this",
                "unit": "hour"
            }
        }
    },
    "inputs": [{
        "type": "GoogleCalendar",
        "name": "My Google Calendar",
        "calendars": [{
            "id": "calendar1@group.calendar.google.com",
            "includeTags": [
                "client:My Client 1",
                "project:My Project 1"
            ]
        }, {
            "id": "calendar2@group.calendar.google.com",
            "includeTags": [
                "client:My Client 2",
                "project:My Project 2"
            ]
        }]
    }],
    "outputs": [{
        "type": "TextFile",
        "filePath": "worklogger_home/output.txt",
        "formatter": {
            "type": "SummaryTextFileFormatter",
            "aggregateByTags": [
                ["client"]
            ]
        }
    }]
}
